doctype html
html
  head
    title #{title} - My Site
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="http://code.jquery.com/jquery-2.1.3.min.js")
  body
    header
    h1 GridJS
    #submit-task-form
        form(action="/add_job" method="post")
            p External API URL : 
                input(placeholder="http://mydomain.com/myAPI.js" name="externalApiUrl" size="30" type="url" value="http://localhost:3000/CalculPI.js")
            p Embedded JavaScript : 
                textarea(name="embeddedApi" rows="6" cols="50").
                    No Javascript embedded yet
            p Tasks : 
                textarea(name="tasks" rows="4" cols="50" placeholder="[{x: Math.random(), y: Math.random()}, {x: Math.random(), y: Math.random()}]" ).
                    [{"input": "[Math.random(), Math.random()]"}, {"input": "[Math.random(), Math.random()]"}]
            input(value="Add to queue" type="submit")
